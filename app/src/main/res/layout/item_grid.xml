<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent">

        <Button
            android:id="@+id/r1c1"
            style="@style/ItemGrid"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toTopOf="@id/r2c2"
            app:layout_constraintEnd_toStartOf="@id/r2c2" />

        <Button
            android:id="@+id/r1c2"
            style="@style/ItemGrid"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@id/r2c2"
            app:layout_constraintStart_toStartOf="@id/r2c2" />

        <Button
            android:id="@+id/r1c3"
            style="@style/ItemGrid"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toTopOf="@id/r2c2"
            app:layout_constraintStart_toEndOf="@id/r2c2" />

        <Button
            android:id="@+id/r2c1"
            style="@style/ItemGrid"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/r2c2"
            app:layout_constraintTop_toTopOf="@id/r2c2" />

        <Button
            android:id="@+id/r2c2"
            style="@style/ItemGrid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/r2c3"
            style="@style/ItemGrid"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/r2c2"
            app:layout_constraintTop_toTopOf="@id/r2c2" />

        <Button
            android:id="@+id/r3c1"
            style="@style/ItemGrid"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@id/r2c2"
            app:layout_constraintTop_toBottomOf="@id/r2c2" />

        <Button
            android:id="@+id/r3c2"
            style="@style/ItemGrid"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/r2c2"
            app:layout_constraintTop_toBottomOf="@id/r2c2" />

        <Button
            android:id="@+id/r3c3"
            style="@style/ItemGrid"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/r2c2"
            app:layout_constraintTop_toBottomOf="@id/r2c2" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>